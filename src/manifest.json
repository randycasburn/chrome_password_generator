{
  "manifest_version": 2,

  "name": "PassWord Generator",
  "short_name": "PGen",
  "description": "Easily generate unique random and secure passwords.",
  "version": "0.9.2",
  "version_name": "Plurious Fork",
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["context.js"]
    }
  ],

  "icons": { "16": "icon16.png",
    "48": "icon48.png",
    "96": "icon96.png" },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Generate Password"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "offline_enabled": true,

  "permissions": [ "clipboardWrite", "storage", "contextMenus"]

}